<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.dotofocodex.android_sample">

    <!-- used by floating activity -->
    <uses-permission
        android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- used by main activity -->
    <uses-permission
        android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name=
        "android.permission.INTERNET" />

    <!-- used by camera activity -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TransitionTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="false">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.MainActivity"
            android:enabled="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ThemeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.CustomToastActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.DragDropActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.FloatingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.HTMLActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".proxy.MainActivityProxy"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ThreadActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.RecyclerViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ShareActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.TabActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.OrderActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.BadgesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.BottomSheetActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.FloatingActionButtonActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.CameraActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.PictureActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.PopupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.TextViewJustifyActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.AsyncTaskActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.KeyboardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <activity
            android:name=".activity.FontActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SwitchActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.LooperActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.TransitionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.Transition1Activity"
            android:screenOrientation="portrait" />

        <!--  Declare FloatingWidget Service over here and set enabled true -->
        <service
            android:name=".service.android.FloatingWidgetService"
            android:enabled="true"
            android:exported="false" />
    </application>
</manifest>