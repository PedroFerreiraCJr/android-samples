<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.dotofocodex.simple_v1">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity
            android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ThemeActivity" />
        <activity
            android:name=".activity.CustomToastActivity" />
        <activity
            android:name=".activity.DragDropActivity" />
        <activity
            android:name=".activity.FloatingActivity" />
        <activity
            android:name=".activity.HTMLActivity" />
        <activity
            android:name=".proxy.MainActivityProxy" />

        <activity
            android:name=".activity.ThreadActivity" />

        <!--  Declare FloatingWidget Service over here and set enabled true -->
        <service
            android:name=".service.android.FloatingWidgetService"
            android:enabled="true"
            android:exported="false" />

    </application>

    <!-- used by floating activity -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- used by main acitivty -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
</manifest>