<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="Theme.1" parent="Theme.App.Lilac" />

    <style name="Theme.2" parent="Theme.App.Mint" />

    <!-- styles of myMsgBox; applied to newmb_messagebar.xml. -->
    <style name="bgTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center</item>
        <item name="android:textColor">@drawable/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/bg_gradiant</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:text">05</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button.Blue" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/portal</item>
    </style>

    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Button.Transparent" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/transparent</item>
    </style>

    <style name="Switch.Theme" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <!--<item name="android:colorControlActivated">#1b5e20</item>-->
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

</resources>
