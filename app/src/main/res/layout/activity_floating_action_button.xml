<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_activity_floating_action_button_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_activity_floating_action_button_0"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/yellow" />

        <LinearLayout
            android:id="@+id/ll_activity_floating_action_button_1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/orange" />

        <LinearLayout
            android:id="@+id/ll_activity_floating_action_button_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/pink" />

        <LinearLayout
            android:id="@+id/ll_activity_floating_action_button_3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/red" />
    </LinearLayout>

    <include layout="@layout/activity_floating_action_button_fab_0" />

    <include layout="@layout/activity_floating_action_button_fab_1" />

    <include layout="@layout/activity_floating_action_button_fab_2" />

    <include layout="@layout/activity_floating_action_button_fab_3_inner_0" />

    <include layout="@layout/activity_floating_action_button_fab_3" />
</android.support.design.widget.CoordinatorLayout>