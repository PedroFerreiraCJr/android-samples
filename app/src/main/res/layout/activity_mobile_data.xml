<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_activity_mobile_data_enable_mobile_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="Enable Mobile Data" />

    <Button
        android:id="@+id/bt_activity_mobile_data_disable_mobile_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="Disable Mobile Data" />

    <Button
        android:id="@+id/bt_activity_mobile_data_enable_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="Enable Wifi" />

    <Button
        android:id="@+id/bt_activity_mobile_data_disable_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="Disable Wifi" />
</LinearLayout>