<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/portal"
    android:fitsSystemWindows="true">

    <br.com.dotofocodex.android_sample.component.MovableFloatingActionButton
        android:id="@+id/mfab_activity_floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        android:visibility="visible"
        app:borderWidth="0dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_activity_floating_action_button_0"
